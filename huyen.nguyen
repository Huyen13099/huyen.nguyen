            const amountInput = document.getElementById('investmentAmount');
            const packageSelect = document.getElementById('packageSelect');
            const monthlyReturnEl = document.getElementById('monthlyReturn');
            const totalReturnEl = document.getElementById('totalReturn');

            investmentPackages.forEach((pkg, index) => {
                const option = document.createElement('option');
                option.value = index;
                option.textContent = pkg.name;
                packageSelect.appendChild(option);
            });

            function calculateROI() {
                const amount = parseFloat(amountInput.value) || 0;
                const selectedPackage = investmentPackages[packageSelect.value];
                
                if (amount > 0 && selectedPackage) {
                    const monthlyBCS = amount * selectedPackage.rate;
                    const totalBCS = monthlyBCS * selectedPackage.duration;

                    monthlyReturnEl.textContent = `${monthlyBCS.toLocaleString('vi-VN')} BCS`;
                    totalReturnEl.textContent = `${totalBCS.toLocaleString('vi-VN')} BCS`;
                } else {
                    monthlyReturnEl.textContent = '0 BCS';
                    totalReturnEl.textContent = '0 BCS';
                }
            }

            amountInput.addEventListener('input', calculateROI);
            packageSelect.addEventListener('change', calculateROI);
            calculateROI();

            const ctx = document.getElementById('tokenomicsChart').getContext('2d');
            new Chart(ctx, {
